@using InteractiveMembership.Core.Constants;
@model RockawayWish.Web.Models.EditProfileViewModel
<section id="edit-profile">
    <div class="container">
        <div class="row text-center">
            <div class="col-sm-8 col-sm-offset-2">
                <h2 class="title-one">Member Center</h2>
                <h3 style="background-color: #FFA1D5; padding: 10px; font-weight: bold">Profile Information</h3>
