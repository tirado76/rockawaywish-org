@using CaptchaMvc.HtmlHelpers
@model RockawayWish.Web.ViewModels.ContactUsVM

<div class="container">
    <div class="page-header">Contact Us</div>
    <div class="row">
        <div class="col-sm-6">
            <p>If you have any questions, comments, or suggestions for @Model.SiteAppSettings.SiteTitle, please send us a message and we will get back to you shortly.</p>
            <address>
                <strong>@Model.SiteAppSettings.SiteTitle</strong>
                <br />
                <strong>533 Beach 126th St<br>Belle Harbor, NY 11694</strong>
                <br />
                <small>email: info@rockawaywish.org</small>
            </address>
            <div>
                <a href="https://www.facebook.com/Rockaway-WISH-305408352848897" target="_blank">
                    <img src="@Url.Content("~/Content/images/facebook-icon.png")" class="social-icon" style="width: 100px;"  />
                </a>

                <a href="https://twitter.com/RockawayWISH" target="_blank">
                    <img src="@Url.Content("~/Content/images/twitter-icon.png")" class="social-icon"  style="width: 100px;"  />
                </a>
            </div>
        </div>
        <div class="col-sm-6">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                if (Model.Status == 1)
                {
                    <div class="alert alert-danger">
                        <strong>Warning!</strong> @Model.Message
                    </div>
                }
                <div class="form-group">
                    <input type="text" name="Name" class="form-control" required="required" placeholder="Your Name">
                    @*@Html.ValidationMessageFor(m => m.Name, "", new { @class = "alert-danger" })*@
                </div>
                <div class="form-group">
                    <input type="email" name="Email" class="form-control" required="required" placeholder="Your Email">
                    @*@Html.ValidationMessageFor(m => m.Email, "", new { @class = "alert-danger" })*@
                </div>
                <div class="form-group">
                    <textarea name="ContactMessage" id="ContactMessage" required="required" class="form-control" rows="8" placeholder="Message"></textarea>
                    @*@Html.ValidationMessageFor(m => m.ContactMessage, "", new { @class = "alert-danger" })*@
                </div>

                <div class="form-group">
                    @Html.MathCaptcha()
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            }
        </div>
    </div>
</div>
