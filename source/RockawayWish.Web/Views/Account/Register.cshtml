@using CaptchaMvc.HtmlHelpers
@using InteractiveMembership.Core.Constants.EndPointSettings;
@model InteractiveMembership.Core.ViewModels.RegisterVM

    <div class="container">
        <div class="page-header">Register</div>
        <p>Already have an account? <a href="@Url.Content(string.Format("~/{0}", SiteEndPointsConfig.Login))">Sign In</a></p>
        <h5>Please enter your email and password.</h5>
        <div class="row">
            <div class="col-sm-12">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    if (Model.Status == 1)
                    {
                        <div class="alert alert-danger">
                            <strong>Warning!</strong> @Model.Message
                        </div>
                    }
                    <div class="form-group">
                    </div>
                    <div class="form-group">
                        <label for="Email">Email address:</label>
                        <input type="email" name="Email" id="Email" class="form-control" required="required" placeholder="Your Email">
                    </div>
                    <div class="form-group">
                        <label for="ConfirmEmail">Confirm email address:</label>
                        <input type="email" name="ConfirmEmail" id="Email" class="form-control" required="required" placeholder="Confirm your email">
                    </div>
                    <div class="form-group">
                        <label for="Password">Password:</label>
                        <input type="password" name="Password" id="Password" class="form-control" required="required" placeholder="Your Password">
                    </div>
                    <div class="form-group">
                        <label for="ConfirmPassword">Confirm Password:</label>
                        <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control" required="required" placeholder="Confirm your password">
                    </div>
                    <div class="form-group">
                        @Html.MathCaptcha()
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                }
            </div>
        </div>
    </div>
