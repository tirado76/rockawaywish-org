@model InteractiveMembership.Core.ViewModels.ResetPasswordCompleteVM
<h2>Reset your password</h2>
<hr />
<div>
    @if (Model.Status == 1)
    {
        <h4>We're sorry. We are unable to reset your password</h4>
        <p>@Model.Message</p>
        <p>@Html.ActionLink("Click here to reset your password", "ForgotPassword").</p>
    }
    else
    {
        <p>Your password has been reset. Please <a href="@Url.Content(string.Format("~/{0}", InteractiveMembership.Core.Constants.EndPointSettings.SiteEndPointsConfig.Login))">click here to</a> sign in.</p>
    }
</div>