                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default" value="Register" />
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.YearJoined)
                    }
                }
                else
                {
                    <h3>There is a user already signed in.</h3>
                }

            </div>
        </div>
    </div>
</section>
